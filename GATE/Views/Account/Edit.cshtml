@model GATE.Models.StudentDetailsViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<h2>Edit Stduent</h2>
@using (Html.BeginForm("Edit", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"})) {
    @Html.AntiForgeryToken()
    <hr/>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Student.FirstName, new {@class = "control-label"})
                    <div>
                        @Html.TextBoxFor(model => model.Student.FirstName, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Student.FirstName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Student.NickName, new {@class = "control-label"})
                    <div>
                        @Html.TextBoxFor(model => model.Student.NickName, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Student.NickName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Student.FamilyName, new {@class = "control-label"})
                    <div>
                        @Html.TextBoxFor(model => model.Student.FamilyName, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Student.FamilyName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Student.NationalCode, new {@class = "control-label"})
                    <div>
                        @Html.TextBoxFor(model => model.Student.NationalCode, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Student.NationalCode)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Student.FathersName, new {@class = "control-label"})
                    <div>
                        @Html.TextBoxFor(model => model.Student.FathersName, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Student.FathersName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Student.Birthday, new {@class = "control-label"})
                    <div>
                        @Html.TextBoxFor(model => model.Student.Birthday, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Student.Birthday)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Student.BornCity, new {@class = "control-label"})
                    <div>
                        @Html.TextBoxFor(model => model.Student.BornCity, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Student.BornCity)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Phone, new {@class = "control-label"})
                    <div>
                        @Html.TextBoxFor(model => model.Phone, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Phone)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Student.Telephone, new {@class = "control-label"})
                    <div>
                        @Html.TextBoxFor(model => model.Student.Telephone, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Student.Telephone)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Student.PostalCode, new {@class = "control-label"})
                    <div>
                        @Html.TextBoxFor(model => model.Student.PostalCode, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Student.PostalCode)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Student.Address, new {@class = "control-label"})
                    <div>
                        @Html.TextAreaFor(model => model.Student.Address, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Student.Address)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Student.Plaque, new {@class = "control-label"})
                    <div>
                        @Html.TextBoxFor(model => model.Student.Plaque, new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.Student.Plaque)
                    </div>
                </div>

                @Html.HiddenFor(model => model.Student.Id)
            </div>
            
            <div class="col-12 col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.UserName, new {@class = "control-label"}):&nbsp;
                    @Html.DisplayFor(model => model.UserName)
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, new {@class = "control-label"}):&nbsp;
                    @Html.DisplayFor(model => model.Email)
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.Student.Gpa, new {@class = "control-label"}):&nbsp;

                    @Html.DisplayFor(model => model.Student.Gpa, new {@class = "form-control"})

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Student.StudentNumber, new {@class = "control-label"}):&nbsp;
                    @Html.DisplayFor(model => model.Student.StudentNumber, new {@class = "form-control"})

                </div>

            </div>
        </div>
    </div>
    <hr/>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" class="btn btn-default btn-lg" value="Edit"/>
            @Html.ActionLink("Back","Index",null,new {@class="btn btn-secondary btn-lg"})
        </div>
    </div>
}