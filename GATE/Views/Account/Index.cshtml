@model IEnumerable<GATE.Models.CustomIdentityUser>

@{
    ViewBag.Title = "Manage Users";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<h2>Users Manager</h2>

<p>
    @Html.ActionLink("Create New", "UserType", null, new { @class = "text-white" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("User Name")
        </th>
        <th>
            @Html.DisplayName("Last Update")
        </th>
        <th>
            @Html.DisplayName("User Type")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayName("Phone Number")
        </th>
        <th>
            @Html.DisplayName("Options")
        </th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditUser", new {id = item.UserTypeId}, new {@class = "text-warning"}) |
                @Html.ActionLink("Delete", "Delete", new { id = item.UserTypeId }, new {@class = "text-danger"})
            </td>
        </tr>
    }

</table>